#!/bin/bash

DIR=`dirname $0`/..
CILLY=${DIR}/cil/bin/cilly
YICES_DIR=/home/sudeep/yices

TARGET=`expr $1 : '\(.*\)\.c'`

rm -f idcount stmtcount funcount cfg_func_map cfg branches cfg_branches

${CILLY} $1 -o ${TARGET} --save-temps --doCrestInstrument \
    -I${DIR}/include -L${DIR}/lib -L${YICES_DIR}/lib -lcrest -lyices -lstdc++

${DIR}/bin/process_cfg
